<div class="modal fade text-dark" id="@ModalId" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Title</h5>
                <button type="button" @onclick="CloseModalEvent" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">

                <button type="button" @onclick="CloseModalEvent" class="btn btn-secondary" data-dismiss="modal">@CloseTitle</button>
                @if (IsForm)
                {
                    <button type="submit" form="@FormId" @onclick="TaskEvent" class="btn btn-primary">@TaskTitle</button>
                }
                else
                {
                    <button type="button" @onclick="TaskEvent" class="btn btn-primary">@TaskTitle</button>
                }
            </div>
        </div>
    </div>
</div>

@code {

    [Parameter]
    public string ModalId { get; set; } = "modal";

    [Parameter]
    public string Title { get; set; }


    [Parameter]
    public string TaskTitle { get; set; } = "Save";

    [Parameter]
    public string CloseTitle { get; set; } = "Close";


    [Parameter]
    public bool IsForm { get; set; }

    [Parameter]
    public string FormId { get; set; } = "form";

    [Parameter]
    public RenderFragment Body { get; set; }

    [Parameter]
    public EventCallback CloseModalEvent { get; set; }

    [Parameter]
    public EventCallback TaskEvent { get; set; }

}