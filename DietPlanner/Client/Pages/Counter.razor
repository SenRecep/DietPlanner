@page "/counter"
<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>


<CustomAuthorizeView>
    <Authorized>
        <p>Authorized</p>
    </Authorized>
    <NotAuthorized>
        <p>NotAuthorized</p>
    </NotAuthorized>
</CustomAuthorizeView>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
